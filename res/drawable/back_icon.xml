<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
                android:fromDegrees="45"
                android:pivotY="50%"
                android:pivotX="50%"
                >
            <shape android:shape="line">
                <size
                        android:height="5dp"
                        android:width="5dp"></size>
                <stroke
                        android:width="1dp"
                        android:color="#ff0000"/>
            </shape>
        </rotate>
    </item>
    <item android:top="15dp">
        <rotate
                android:fromDegrees="-45"
                android:pivotY="0%"
                android:pivotX="0%"
                >
            <shape android:shape="line">
                <size
                        android:height="5dp"
                        android:width="5dp"></size>
                <stroke
                        android:width="1dp"
                        android:color="#ff0000"/>
            </shape>
        </rotate>
    </item>
</layer-list>