<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="260dp"
              android:layout_height="wrap_content"
              android:layout_marginRight="3dp"
              android:paddingTop="12dp"
              android:paddingRight="4dp"
              android:paddingLeft="7dp"
              android:paddingBottom="120dp"
        >
        <ImageView
                android:id="@+id/card_dialog_close"
                android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                android:src="@drawable/more_ic_close_default"
                android:layout_gravity="right"
                />
        <ImageView
                android:id="@+id/card_dialog_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more_ic_edit_default"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="58dp"
        />
    <ImageView
            android:id="@+id/card_dialog_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more_ic_finish_default"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            />
    <ImageView
            android:id="@+id/card_dialog_abandon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more_ic_abandon_default"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            />
</LinearLayout>